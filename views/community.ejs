<%-include("partials/header")%>

<main id="site-main" style="height: 100vh;" class="d-flex align-items-center bg-light">
    <div class="container">
        <h1 class="mb-3 text-center"><i class="fa-solid fa-chart-line"></i> Most Active Users</h1>
        <form action="/" method="POST">
            <table class="table table-dark table-striped table-hover rounded rounded-3 overflow-hidden" >
                <thead class="thead-light">
                    <tr class="p-4">
                        <th class="p-3 fs-5 text-center">#</th>
                        <th class="p-3 fs-5 text-left">Name</th>
                        <th class="p-3 fs-5 text-center">Bio</th>
                        <th class="p-3 fs-5 text-center"></th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i = 0; i < users.length; i++) { %>
                            <tr>
                                <td class="text-center"><%=i+1%></td>
                                <td>
                                    <a href="/user/<%=users[i]._id%>" class="text-light text-decoration-none" title="View User Profile" data-toggle="popover" data-content="Your popover content here">
                                        <span>
                                            <i class="fa-regular fa-circle-user fa-lg"></i> <%=users[i].name%> (<%=users[i].username%>)
                                        </span>
                                    </a>
                                </td>
                                <td><%=users[i].bio%></td>
                                <td>
                                    <div class="d-flex justify-content-center">
                                        <form action="/user/<%=users[i]._id%>?_method=DELETE" method="POST" title="Delete User">
                                            <button class="btn border-shadow delete">
                                                <span><i class="fa-regular fa-trash-can text-light"></i></span>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                    <% } %>
                </tbody>
            </table>
        </form>
    </div>
</main>
<%-include("partials/footer")%>